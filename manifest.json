{
  "manifest_version": 3,
  "name": "Secretary.Doctoreto To Excel",
  "version": "2.7",
  "description": "این افزونه اطلاعات جدول‌های صفحات وب سایت منشی دکترتو را استخراج کرده و به فایل اکسل تبدیل می‌کند.",
  "permissions": ["activeTab", "scripting", "downloads", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
},
"content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }
]}